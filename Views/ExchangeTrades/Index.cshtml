@model IEnumerable<MeDirectMicroservice.Models.ExchangeTrade>

@{
    ViewData["Title"] = "Index";
}
@if (ViewBag.Limit != null)
{
<div class="alert alert-danger" role="alert">
    @ViewBag.Limit
</div>
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AmountToTrade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrencyFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrencyTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TradedAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExchangeTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AmountToTrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TradedAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExchangeTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
